@page
@model ControlLoggingApplication.Pages.AboutModel
@{
}

<div class="alert alert-primary shadow mt-4" role="alert">
    <h1 class="fs-6 text-center">Logging settings for this page</h1>
</div>


<input type="hidden" asp-for="LoggingEnabled" id="logging" />

<div class="row">
    <div id="result"></div>
</div>


@section Scripts
    {
    <script>
        document.addEventListener("DOMContentLoaded", () => {

            var isEnabled = document.getElementById("logging").value;

            if (isEnabled === 'True') {
                document.getElementById("result").innerHTML = 'Logging is <span class="fs-bold text-primary">enabled</span> for this page';
            } else {
                document.getElementById("result").innerHTML = 'Logging is <span class="fs-bold text-danger">disabled</span> for this page';
            }

        });
    </script>
}
